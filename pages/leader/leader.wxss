.container {
  background-color: #eff; 
}
.container-wrap {
   width: 100%; 
}
.container-leader-title {
  width: 100%;
  height: 80rpx;
  line-height: 60rpx;
  font-size:36rpx;
  font-weight: bold;
  color:#444;
  text-align:center;
  background-color: #fff;
  border-bottom: 1px solid #eff; 
}
.container-scroll {
  width: 100%;
}
.container-scroll-content {
  padding: 20rpx 30rpx;
  margin-bottom: 14rpx;
  background-color: #fff;
}
.container-scroll-content:last-child {
  margin-bottom: 0;
}
.container-scroll-content-item {
  width: 100%;
  height: 66rpx;
}
.container-scroll-content-item image,
.container-scroll-content-item text {
  display:inline-block;
  vertical-align:middle;
}
.container-scroll-content-item image{
  width: 66rpx;
  height: 100%;
  margin-right: 20rpx;
  border-radius: 50%;
}
.container-scroll-content-banner-img {
  margin-top: 14rpx;
}
.container-scroll-content-banner-img image {
  width: 100%;
  height: 302rpx;
  border-radius: 14rpx;
}
.container-scroll-content-title {
  width: 100%;
  margin: 32rpx 0;
  color: #444;
  font-size: 44rpx;
  font-weight: bold;
}
.container-scroll-content-introduct {
  width: 100%;
  line-height: 48rpx; 
  margin-bottom: 32rpx; 
  font-size: 32rpx;
  color: #7f7f7f;
  overflow:hidden;
  text-overflow:ellipsis;
   display:-webkit-box;
  -webkit-box-orient:vertical; 
  -webkit-line-clamp:2;
} 
.container-scroll-content-footer {
  display:flex;
  align-items: center;
  justify-content:space-between;
  font-size: 26rpx;
  color: #7f7f7f;
}
.container-scroll-content-footer image {
  width: 28rpx;
  height: 28rpx;
  margin-left: 14rpx;
}
.container-scroll-content-footer-thumbe {
  display:flex;
  align-items: center;
  flex-direction:row;
}
.search-wrap {
  margin-bottom: 10rpx;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #f0f0f0; 
}
.container-wrap {
  width: 100%;
}
.container-list {
  display: flex;
  width: 100%;
  padding: 10rpx 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
}
.container-list .lf {
  width: 176rpx;
}
.container-list .rt {
  flex:1;
  /* padding-left: 18rpx; */
  font-size: 32rpx;
  color: #444;
}
.container-list .lf image {
  width: 176rpx;
  height: 224rpx;
  border-radius: 14rpx;
}
.container-list .rt .name {
  line-height: 60rpx;
  margin-left: 18rpx;
}
.container-list .rt .author {
  margin-left: 8rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  color: #222;
}
.container .rt .desc {
  margin-left: 18rpx;
  font-size:24rpx;
  color: #9c9a9c;
  overflow:hidden;
  text-overflow:ellipsis;
  display:-webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}